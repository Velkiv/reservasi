generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Users {
  id Int @id @default(autoincrement())
  name String @unique
  email String @unique
  hashpass String
  role Role @default(Assistant)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  Admin 
  Assistant
  Doctor
}

model Pasien {
  id Int @id @default(autoincrement())
  namaPasien String
  nohp String @unique
  reservasi Reservasi[]

  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model Reservasi {
  id Int @id @default(autoincrement())
  pasien Pasien @relation(fields: [pasienId], references: [id])
  pasienId Int

  start_at DateTime
  finish_at DateTime
  description String?
  status Status

  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  
}

enum Status {
  Booked
  Finished
  Cancelled
}

